{
    "manifest_version": 3,
    "name": "ChatGPT Extension",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "128": "icon.png"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://chat.openai.com/*"],
            "js": ["./src/content.ts"]
        }
    ],
    "icons": {
        "128": "icon.png"
    }
}
